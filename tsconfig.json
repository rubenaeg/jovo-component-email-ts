{
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "target": "es2017",
        "declaration": true,
        "noImplicitAny": true,
        "strict": true,
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "removeComments": true,
        "preserveWhitespace": true,
        "types": [
            "node"
        ],
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.json",
        "src/**/*.ts",
        "*.ts"
    ]
}